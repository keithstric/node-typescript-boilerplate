{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"removeComments": false,
		"experimentalDecorators": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./client/**/*"
	]
}
